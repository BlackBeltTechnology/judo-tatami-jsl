@abstract
rule AbstractViewWidgetDeclaration
    transform s: JSL!UIViewWidgetDeclaration
    to t: UI!ui::VisualElement {
        guard: rootMenu.containsVisualElement(s)

        t.name = s.name;
        t.label = s.getLabelWithNameFallback();
        if (s.getIconModifier().isDefined()) {
            t.icon = s.equivalent("ViewWidgetIcon");
        }
        t.attributeType = s.getTransferFieldDeclarationEquivalent();
        if (s.eContainer.isKindOf(JSL!UIViewDeclaration)) {
            t.~pos = s.eContainer.members.indexOf(s);
        } else {
            t.~pos = s.~pos.isDefined() ? s.~pos : 0;
        }

}

@lazy
@greedy
rule ViewWidgetIcon
    transform s: JSL!UIViewWidgetDeclaration
    to t: UI!ui::Icon {
        t.iconName = s.getIconModifier().value.value;
        t.name = s.name + "WidgetIcon";
        t.setId(rootMenu.name + "/(jsl/" + s.getId() + ")/ViewWidgetIcon");
}

@greedy
rule BinaryTypeInput
    transform s: JSL!UIViewWidgetDeclaration
    to t: UI!ui::BinaryTypeInput
    extends AbstractViewWidgetDeclaration {
        guard: s.transferField.target.referenceType.`primitive`.isDefined()
            and s.transferField.target.referenceType.`primitive` == "binary"

        s.eContainer.uiContainer().children.add(t);
        t.setId(rootMenu.name + "/(jsl/" + s.getId() + ")/BinaryTypeInput");
        log.debug("BinaryTypeInput: " + t.name);
}

